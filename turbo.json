{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "format": {
      "cache": false
    },
    "format:check": {},
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "test:coverage": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    }
  }
}
